# ===================================
# PRODUCTION ENVIRONMENT - DEV SERVER
# Dialogix CRM - dev.dialogix.com.br
# ===================================

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (PostgreSQL)
DATABASE_HOST=dialogix-crm_postgres
DATABASE_PORT=5432
DATABASE_USER=dialogix
DATABASE_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2026
DATABASE_NAME=dialogix_crm_dev
DATABASE_URL=postgresql://dialogix:CHANGE_ME_SECURE_PASSWORD_2026@postgres:5432/dialogix_crm_dev

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_2026
REDIS_TTL=300

# Authentication
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT_KEY_DEV_2026_MIN_32_CHARS
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=CHANGE_ME_SUPER_SECRET_REFRESH_KEY_DEV_2026_MIN_32_CHARS
JWT_REFRESH_EXPIRATION=30d
BCRYPT_ROUNDS=10

# CORS & Frontend
FRONTEND_URL=https://dev.dialogix.com.br
ALLOWED_ORIGINS=https://dev.dialogix.com.br,https://api-dev.dialogix.com.br

# Cloudflare API (opcional - para automação DNS)
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
SERVER_IP=your_server_ip_here

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,video/mp4,audio/mpeg

# External APIs - WhatsApp (Evolution API)
EVOLUTION_API_URL=https://evo.dialogix.com.br
EVOLUTION_API_KEY=your_evolution_api_key

# External APIs - Instagram (Meta Graph API)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
META_ACCESS_TOKEN=your_meta_access_token

# External APIs - Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# External APIs - OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# External APIs - Anthropic Claude
CLAUDE_API_KEY=sk-ant-your-claude-api-key
CLAUDE_MODEL=claude-3-opus-20240229

# External APIs - Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# External APIs - xAI Grok
GROK_API_KEY=your-grok-api-key
GROK_MODEL=grok-1

# External APIs - Stripe (Payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs - AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=dialogix-crm-dev-uploads

# Email (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your_sendgrid_api_key
SMTP_FROM_EMAIL=noreply@dialogix.com.br
SMTP_FROM_NAME=Dialogix CRM Dev

# Monitoring & Logging
LOG_LEVEL=debug
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# WebSocket
WS_PORT=3001
WS_CORS_ORIGIN=https://dev.dialogix.com.br

# Queue (BullMQ)
QUEUE_REDIS_HOST=redis
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_2026

# Vite (Frontend build args)
VITE_API_URL=https://api-dev.dialogix.com.br
VITE_WS_URL=wss://api-dev.dialogix.com.br
